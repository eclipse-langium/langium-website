{
  "name": "langium-website",
  "version": "0.0.0",
  "description": "Source code for langium.org",
  "author": "TypeFox",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run build:tailwind:dev\" \"npm run build:hugo:dev\"",
    "build": "npm run build:tailwind && npm run build:hugo:clean && npm run build:hugo",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:hugo": "NODE_ENV=production hugo --config config.toml --gc --minify -b / -s hugo -d ../public",
    "build:hugo:dev": "NODE_ENV=development hugo server --config config.toml -D -b `gp url 1313` -s hugo -d ../public --appendPort=false",
    "build:hugo:clean": "rm -rf public",
    "build:tailwind": "NODE_ENV=production tailwindcss -i ./tailwind/style.css -o ./hugo/static/css/style.css -c ./tailwind/tailwind.config.js",
    "build:tailwind:dev": "NODE_ENV=development tailwindcss -i ./tailwind/style.css -o ./hugo/static/css/style.css --watch -c ./tailwind/tailwind.config.js"
  },
  "devDependencies": {
    "concurrently": "^6.2.2",
    "hugo-extended": "^0.89.4",
    "live-server": "^1.1.0",
    "tailwindcss": "^2.2.16"
  }
}
