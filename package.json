{
  "name": "langium-website",
  "version": "0.0.0",
  "description": "Source code for langium.org",
  "author": "TypeFox",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "concurrently \"NODE_ENV=development npm run build:tailwind:dev\" \"npm run build:hugo:dev\"",
    "build": "NODE_ENV=production npm run build:tailwind && npm run build:hugo",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:hugo": "hugo --config config.toml --gc --minify -b / -s hugo -d ../public",
    "build:hugo:dev": "hugo server --config config.toml -D -b `gp url 1313` -s hugo -d ../public --appendPort=false",
    "build:tailwind": "tailwindcss -c ./tailwind/tailwind.config.js -i ./tailwind/style.css -o ./hugo/static/css/style.css --minify",
    "build:tailwind:dev": "tailwindcss -c ./tailwind/tailwind.config.js -i ./tailwind/style.css -o ./hugo/static/css/style.css --watch"
  },
  "devDependencies": {
    "concurrently": "^6.2.2",
    "hugo-extended": "^0.89.4",
    "live-server": "^1.1.0",
    "tailwindcss": "^2.2.16"
  }
}
